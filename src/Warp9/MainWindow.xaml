<Window x:Class="Warp9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dx="clr-namespace:Microsoft.Wpf.Interop.DirectX;assembly=Microsoft.Wpf.Interop.DirectX"
        xmlns:local="clr-namespace:Warp9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="lblCursorPosition" Text="Woohoo"/>
            </StatusBarItem>
        </StatusBar>
        
        <Grid x:Name="ImageGrid"  Loaded="Grid_Loaded" SizeChanged="Grid_SizeChanged">
            <Image x:Name="ImageHost" Stretch="Fill">
                <Image.Source>
                    <dx:D3D11Image x:Name="InteropImage"/>
                </Image.Source>
            </Image>
        </Grid>
        
       
    </DockPanel>
</Window>
