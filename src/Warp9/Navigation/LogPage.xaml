<Page x:Class="Warp9.Navigation.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warp9.Navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">


    <Grid>
        <Border BorderBrush="{DynamicResource TabItem.Selected.Border}">
            <TextBox x:Name="txtLog" 
                     Style="{DynamicResource NoHoverTextBox}"
                     VerticalScrollBarVisibility="Visible" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     FontFamily="Cascadia Mono Light" 
                     IsReadOnly="True"
                     Padding="4,4,4,4" />
        </Border>
    </Grid>
</Page>
