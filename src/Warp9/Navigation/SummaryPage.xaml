<Page x:Class="Warp9.Navigation.SummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mi="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
      xmlns:local="clr-namespace:Warp9.Navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource Brush.Background}"
      Title="SummaryPage">

    <DockPanel Background="{DynamicResource Brush.Background}" Margin="8">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="32">
            <mi:MaterialIcon Kind="TimelineText" />
            <TextBlock Text="Summary" Margin="8,0,0,0" VerticalAlignment="Center" Style="{DynamicResource GroupBoxHeaderBlock}" />
        </StackPanel>

        <FlowDocumentScrollViewer x:Name="docMain" DockPanel.Dock="Bottom" Background="{DynamicResource Brush.Background}" Padding="8" />
    </DockPanel>
</Page>
