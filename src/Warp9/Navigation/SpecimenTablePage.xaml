<Page x:Class="Warp9.Navigation.SpecimenTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warp9.Navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SpecimenTablePage">

    <Grid>
        <DockPanel >
            <TextBox x:Name="txtName" FontSize="16" BorderThickness="0" Padding="4" DockPanel.Dock="Top">
                Specimen table
            </TextBox>

            <DataGrid x:Name="dataMain" VerticalAlignment="Stretch" DockPanel.Dock="Top" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">                
            </DataGrid>
        </DockPanel>
    </Grid>
</Page>
